
<h1>Shakespeare's World</h1>

<script src="javascripts/bootstrap-tooltip.js"></script>
<script src="javascripts/bootstrap-popover.js"></script>

<div id="mapHolder" class="center">


</div>
<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <input type="button" class="btn btn-large btn-primary" value="Post" onclick="startAPost()">
        </section>
        <section>
          <%= render 'shared/post_form' %>
        </section>
      </aside>
    </div>

<% else %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
<% end %>

<% s = Geocoder.search("wpi")%>
<%= s[0].address %>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=150x150&sensor=false&zoom=16&markers=#{s[0].latitude}%2C#{s[0].longitude}" %>

